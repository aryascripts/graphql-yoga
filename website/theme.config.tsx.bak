export default {
  editLink: {
    component({ children, className, filePath }) {
      const { asPath } = useRouter();
      const isEditablePage = asPath.startsWith('/docs') || asPath.startsWith('/tutorial');

      return (
        isEditablePage && (
          <a
            className={className}
            target="_blank"
            rel="noreferrer"
            href={`${docsRepositoryBase}/${filePath}`}
          >
            {children}
          </a>
        )
      );
    },
  },
};
